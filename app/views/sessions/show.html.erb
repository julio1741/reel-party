<!-- app/views/sessions/show.html.erb -->
<div class="container mt-5">
  <h1 class="text-center mb-4">Session: <%= @session.host_name %></h1>
  <div class="text-center mb-4">
    <% if @user_role == 'host' %>
      <h4>Session ID: <%= @session.id %></h4>
      <div class="mt-2">
        <small class="text-muted">Share URLs:</small><br>
        <div class="btn-group btn-group-sm" role="group">
          <button class="btn btn-outline-primary" onclick="copyToClipboard('<%= request.base_url %>/sessions/<%= @session.id %>?role=guest')">
            üìù Guest Link (Add Only)
          </button>
          <button class="btn btn-outline-success" onclick="copyToClipboard('<%= request.base_url %>/sessions/<%= @session.id %>?role=guest&listen=true')">
            üéµ Guest + Listen
          </button>
        </div>
      </div>
    <% else %>
      <h4>üéµ Joining Session: <%= @session.host_name %></h4>
      <div class="alert alert-info">
        <% if @remote_listen %>
          <strong>üéß Guest Mode:</strong> You can add songs and listen remotely
        <% else %>
          <strong>üìù Guest Mode:</strong> You can add songs to the playlist
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="mb-4">Add Media to the Playlist</h3>
      <div data-controller="media-preview">
        <%= form_with(url: session_media_path(@session), local: true, html: { data: { controller: "media" } }) do |form| %>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :added_by, 'Your Name', class: 'form-label' %>
                <div class="input-group">
                  <%= form.text_field :added_by, 
                      class: 'form-control', 
                      required: true, 
                      placeholder: "Who's adding this?",
                      id: 'user-name-field' %>
                  <span class="input-group-text d-none" id="name-saved-indicator">
                    <small class="text-success">‚úì Saved</small>
                  </span>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :url, 'Media URL', class: 'form-label' %>
                <%= form.text_field :url, 
                    class: 'form-control', 
                    required: true, 
                    pattern: "https?://.+", 
                    data: { 
                      "media-preview-target" => "url",
                      "action" => "input->media-preview#showPreview"
                    } %>
                <div class="invalid-feedback">
                  Please enter a valid URL.
                </div>
              </div>
            </div>
          </div>

          <!-- Preview Area -->
          <div data-media-preview-target="preview"></div>

          <div class="text-center mt-3">
            <%= form.submit 'Add to Playlist', class: 'btn btn-success btn-lg' %>
          </div>
        <% end %>
      </div>

      <!-- Currently Playing Section -->
      <% if @user_role == 'host' || @remote_listen %>
      <div class="row justify-content-center mt-5">
        <div class="col-md-10">
          <div class="card border-warning">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">üéµ Now Playing</h5>
                <% if @current_playing %>
                  <div class="btn-group" role="group" data-controller="player-controls" 
                       data-player-controls-session-id-value="<%= @session.id %>"
                       data-player-controls-media-id-value="<%= @current_playing.id %>">
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-action="click->player-controls#restart">
                      ‚è™ Restart
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-action="click->player-controls#pause">
                      ‚è∏Ô∏è Pause
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-action="click->player-controls#resume">
                      ‚ñ∂Ô∏è Resume
                    </button>
                    <%= button_to 'Next ‚è≠Ô∏è', play_next_session_medium_path(@session, @current_playing), method: :patch, class: 'btn btn-warning btn-sm' %>
                  </div>
                  
                  <!-- Auto-play status indicator -->
                  <div class="mt-2">
                    <div id="autoplay-status">
                      <button id="enable-autoplay" class="btn btn-success btn-sm" onclick="this.style.display='none'; document.getElementById('autoplay-enabled').style.display='block'; document.querySelector('[data-controller*=autoplay]').autoplay?.startCurrentMedia()">
                        ‚ñ∂Ô∏è Enable Auto-Play
                      </button>
                      <div id="autoplay-enabled" style="display: none;">
                        <small class="text-muted">
                          ü§ñ Auto-play: <span class="text-success">Active</span>
                          <span class="ms-2" style="font-size: 0.8em;">Will advance automatically when video ends</span>
                        </small>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
              <hr>
              <div id="current-media-content" 
                   <% if @user_role == 'host' || @remote_listen %>data-controller="autoplay"<% end %>
                   data-autoplay-session-id-value="<%= @session.id %>">
                <% if @current_playing %>
                  <div class="d-flex align-items-center">
                    <span class="badge bg-warning text-dark me-2">#<%= @current_playing.position %></span>
                    <div>
                      <h6><%= @current_playing.title.capitalize %></h6>
                      <small class="text-muted"><%= @current_playing.url %></small>
                    </div>
                  </div>
                  <div id="media-player" class="mt-3" data-autoplay-target="player">
                    <%= raw @current_playing.embed_code %>
                  </div>
                <% else %>
                  <div id="media-player" class="text-center text-muted" data-autoplay-target="player">
                    <i>Add some media to the playlist to get started!</i>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>

      <!-- Queue Section -->
      <div class="row mt-4">
        <div class="col-md-6">
          <h4>‚è±Ô∏è Up Next (<%= @queue.count %> in queue)</h4>
          <% if @queue.any? %>
            <ul class="list-group mt-3" id="playlist" data-playlist-id="<%= @playlist&.id %>">
              <% @queue.each do |medium| %>
                <%= render medium %>
              <% end %>
            </ul>
          <% else %>
            <div class="alert alert-info">Queue is empty. Add more songs!</div>
          <% end %>
        </div>
        
        <!-- Completed Section -->
        <div class="col-md-6">
          <h4>‚úÖ Recently Played</h4>
          <% if @completed.any? %>
            <ul class="list-group mt-3">
              <% @completed.last(5).reverse.each do |medium| %>
                <%= render medium %>
              <% end %>
            </ul>
          <% else %>
            <div class="alert alert-secondary">No songs played yet.</div>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-4">
        <%= link_to 'Back to New Session', new_session_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>

<script>
// Load saved name on page load
document.addEventListener('DOMContentLoaded', function() {
  const nameField = document.getElementById('user-name-field');
  const indicator = document.getElementById('name-saved-indicator');
  
  if (nameField) {
    const savedName = localStorage.getItem('reelPartyUserName');
    if (savedName) {
      nameField.value = savedName;
      if (indicator) indicator.classList.remove('d-none');
    }
    
    // Save name when it changes
    nameField.addEventListener('input', function() {
      if (this.value.trim()) {
        localStorage.setItem('reelPartyUserName', this.value.trim());
        if (indicator) indicator.classList.remove('d-none');
      } else {
        if (indicator) indicator.classList.add('d-none');
      }
    });
  }
});

function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(function() {
    // Show success message
    const toast = document.createElement('div');
    toast.className = 'alert alert-success position-fixed';
    toast.style.top = '20px';
    toast.style.right = '20px';
    toast.style.zIndex = '9999';
    toast.innerHTML = '‚úÖ Link copied to clipboard!';
    document.body.appendChild(toast);
    
    setTimeout(() => {
      document.body.removeChild(toast);
    }, 2000);
  });
}
</script>
