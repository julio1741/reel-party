<!-- app/views/sessions/show.html.erb -->
<div class="container mt-5">
  <h1 class="text-center mb-4">Session: <%= @session.host_name %></h1>
  <h4 class="text-center mb-4">Share this session ID: <%= @session.id %></h4>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="mb-4">Add Media to the Playlist</h3>
      <div data-controller="media-preview">
        <%= form_with(url: session_media_path(@session), local: true, html: { data: { controller: "media" } }) do |form| %>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :added_by, 'Your Name', class: 'form-label' %>
                <%= form.text_field :added_by, class: 'form-control', required: true, placeholder: "Who's adding this?" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :url, 'Media URL', class: 'form-label' %>
                <%= form.text_field :url, 
                    class: 'form-control', 
                    required: true, 
                    pattern: "https?://.+", 
                    data: { 
                      "media-preview-target" => "url",
                      "action" => "input->media-preview#showPreview"
                    } %>
                <div class="invalid-feedback">
                  Please enter a valid URL.
                </div>
              </div>
            </div>
          </div>

          <!-- Preview Area -->
          <div data-media-preview-target="preview"></div>

          <div class="text-center mt-3">
            <%= form.submit 'Add to Playlist', class: 'btn btn-success btn-lg' %>
          </div>
        <% end %>
      </div>

      <!-- Currently Playing Section -->
      <div class="row justify-content-center mt-5">
        <div class="col-md-10">
          <div class="card border-warning">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">üéµ Now Playing</h5>
                <% if @current_playing %>
                  <div class="btn-group" role="group" data-controller="player-controls" 
                       data-player-controls-session-id-value="<%= @session.id %>"
                       data-player-controls-media-id-value="<%= @current_playing.id %>">
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-action="click->player-controls#restart">
                      ‚è™ Restart
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-action="click->player-controls#pause">
                      ‚è∏Ô∏è Pause
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-action="click->player-controls#resume">
                      ‚ñ∂Ô∏è Resume
                    </button>
                    <%= button_to 'Next ‚è≠Ô∏è', play_next_session_medium_path(@session, @current_playing), method: :patch, class: 'btn btn-warning btn-sm' %>
                  </div>
                  
                  <!-- Auto-play status indicator -->
                  <div class="mt-2">
                    <small class="text-muted">
                      ü§ñ Auto-play: <span class="text-success">Active</span>
                      <span class="ms-2" style="font-size: 0.8em;">Will advance automatically when video ends</span>
                    </small>
                  </div>
                <% end %>
              </div>
              <hr>
              <div id="current-media-content" 
                   data-controller="autoplay" 
                   data-autoplay-session-id-value="<%= @session.id %>">
                <% if @current_playing %>
                  <div class="d-flex align-items-center">
                    <span class="badge bg-warning text-dark me-2">#<%= @current_playing.position %></span>
                    <div>
                      <h6><%= @current_playing.title.capitalize %></h6>
                      <small class="text-muted"><%= @current_playing.url %></small>
                    </div>
                  </div>
                  <div id="media-player" class="mt-3" data-autoplay-target="player">
                    <%= raw @current_playing.embed_code %>
                  </div>
                <% else %>
                  <div id="media-player" class="text-center text-muted" data-autoplay-target="player">
                    <i>Add some media to the playlist to get started!</i>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Queue Section -->
      <div class="row mt-4">
        <div class="col-md-6">
          <h4>‚è±Ô∏è Up Next (<%= @queue.count %> in queue)</h4>
          <% if @queue.any? %>
            <ul class="list-group mt-3" id="playlist" data-playlist-id="<%= @playlist&.id %>">
              <% @queue.each do |medium| %>
                <%= render medium %>
              <% end %>
            </ul>
          <% else %>
            <div class="alert alert-info">Queue is empty. Add more songs!</div>
          <% end %>
        </div>
        
        <!-- Completed Section -->
        <div class="col-md-6">
          <h4>‚úÖ Recently Played</h4>
          <% if @completed.any? %>
            <ul class="list-group mt-3">
              <% @completed.last(5).reverse.each do |medium| %>
                <%= render medium %>
              <% end %>
            </ul>
          <% else %>
            <div class="alert alert-secondary">No songs played yet.</div>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-4">
        <%= link_to 'Back to New Session', new_session_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
