<!-- app/views/sessions/new.html.erb -->
<h1>Create a New Session</h1>

<div class="mb-4">
  <%= form_with(model: @session, local: true, html: { class: "form-inline" }) do |form| %>
    <div class="form-group me-2">
      <%= form.label :host_name, 'Your Name', class: 'form-label me-2' %>
      <%= form.text_field :host_name, class: 'form-control', required: true %>
    </div>

    <%= form.submit 'Create Session', class: 'btn btn-primary' %>
  <% end %>
</div>

<p>Share this session ID with your friends!</p>
