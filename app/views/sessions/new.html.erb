<!-- app/views/sessions/new.html.erb -->
<div class="container mt-5">
  <h1 class="text-center mb-4">Create a New Session</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: @session, local: true, html: { class: "form-inline" }) do |form| %>
        <div class="form-group me-2 mb-3">
          <%= form.label :host_name, 'Your Name', class: 'form-label me-2' %>
          <%= form.text_field :host_name, class: 'form-control', required: true %>
        </div>

        <div class="text-center">
          <%= form.submit 'Create Session', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>

  <p class="text-center mt-4">Share this session ID with your friends!</p>
</div>